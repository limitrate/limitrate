{
  "name": "@limitrate/core",
  "version": "1.0.0",
  "description": "Core rate limiting and cost control engine for LimitRate",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting @limitrate/core'",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "rate-limiting",
    "rate-limit",
    "cost-control",
    "redis",
    "gcra",
    "token-bucket"
  ],
  "author": "LimitRate",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/limitrate/limitrate"
  },
  "bugs": {
    "url": "https://github.com/limitrate/limitrate/issues"
  },
  "homepage": "https://github.com/limitrate/limitrate#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "ioredis": "^5.3.2",
    "@upstash/redis": "^1.28.0"
  },
  "peerDependencies": {
    "ioredis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  }
}
